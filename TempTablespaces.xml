	<name><![CDATA[Temp Tablespaces]]></name>
	<description><![CDATA[just list the temp tablespaces (including groups) on the system and the sizes]]></description>
	<tooltip><![CDATA[]]></tooltip>
	<drillclass><![CDATA[null]]></drillclass>
	<CustomValues>
		<TYPE>horizontal</TYPE>
	</CustomValues>
	<query>
		<sql><![CDATA[SELECT "TABLESPACE_NAME", "GROUP_NAME", "MB" FROM(
select t.tablespace_name,TG.GROUP_NAME,round(sum(bytes) / 1048576) mb
from dba_tablespaces t left outer join dba_temp_files tf 
       on (tf.tablespace_name = t.tablespace_name)
       left outer join dba_tablespace_groups tg
on (tg.tablespace_name = t.tablespace_name)
where t.contents = 'TEMPORARY'
group by t.tablespace_name,TG.GROUP_NAME
order by 1
)]]></sql>
	</query>
